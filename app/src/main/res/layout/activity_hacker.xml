<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#000000"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- STATUS -->
    <TextView
        android:id="@+id/statusText"
        android:text="Disconnected"
        android:textColor="#00FF00"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- SERVER STATUS -->
    <TextView
        android:id="@+id/serverStatusText"
        android:text="Server: Unknown"
        android:textColor="#AAAAAA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- FILE COUNT -->
    <TextView
        android:id="@+id/fileCountText"
        android:text="Files: 0"
        android:textColor="#AAAAAA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- LAST BACKUP -->
    <TextView
        android:id="@+id/lastBackupText"
        android:text="Last Backup: Never"
        android:textColor="#AAAAAA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- PROGRESS BAR -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="0"
        android:indeterminate="false"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <!-- CONNECT SERVER -->
    <Button
        android:id="@+id/btnConnect"
        android:text="CONNECT SERVER"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- RUN SCAN -->
    <Button
        android:id="@+id/btnScan"
        android:text="RUN SCAN (SELECT FOLDER)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- MANUAL BACKUP -->
    <Button
        android:id="@+id/btnUpload"
        android:text="UPLOAD DATA (BACKUP)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- AUTO BACKUP -->
    <Button
        android:id="@+id/btnAuto"
        android:text="AUTO BACKUP (DAILY)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"/>

    <!-- STOP AUTO BACKUP -->
    <Button
        android:id="@+id/btnStopAuto"
        android:text="STOP AUTO BACKUP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- CLEAR LOGS -->
    <Button
        android:id="@+id/btnClearLogs"
        android:text="CLEAR LOGS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- LOG VIEW -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/logBox"
            android:textColor="#00FF00"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </ScrollView>

</LinearLayout>